<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-lg-2"></div>
    <div class="col-lg-8">
      <label class="h4 bg-light">注文履歴一覧</label>
      <table class="table shadow-sm">
        <thead　class:"bg-light">
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td><%= link_to order.created_at.strftime("%Y%M%D %H%M%S"), admin_order_path(order) %></td>
            <td><%= order.customer.full_name %></td>
            <td><%= order.car_items.sum(:amount) %></td>
            <td>
              <%= form_with model: order, url: admin_order_path(order), method: :patch do |f| %>
                <%= order.select order_status, Order.order_statuses, class: "form-control" %>
              <% end %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>