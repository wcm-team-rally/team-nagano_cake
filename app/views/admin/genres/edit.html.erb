<div class="container">
  <label class="h4 bg-light px-4">ジャンル編集</label>

  <div class="row">
    <div class="col-lg-10">
      <div class="form mt-5 mb-5">
        <%= form_with model: @genre, url: admin_genre_path(@genre.id), method: :patch do |f| %>
          <%= f.label :ジャンル名, class:"mr-5" %>
          <%= f.text_field :name %>
          <%= f.submit '変更を保存', class:"btn btn-success ml-5 px-4" %>
        <% end %>
      </div>
    </div>
  </div>
</div>