<div class="container">
  <div class="row mb-5">
    <div class="col-lg-2"></div>
    <div class="col-lg-10">
      <label class="h4 bg-light">管理者ログイン</label>
    </div>
  </div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row mb-3">
      <div class="col-lg-3"></div>
      <div class="col-lg-2">
        <%= f.label :メールアドレス %>
      </div>
      <div class="col-lg-7">
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
    </div>

    <div class="row mb-3">
      <div class="col-lg-3"></div>
      <div class="col-lg-2">
        <%= f.label :パスワード %>
      </div>
      <div class="col-lg-7">
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>
    </div>

    <div class="row mb-5">
      <div class="col-lg-5"></div>
      <div class="col-lg-7">
        <%= f.submit "ログイン", class: "btn btn-sm btn-primary" %>
      </div>
    </div>

      <% if false %>
        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
      <% end %>

    <% end %>

    <%= render "admin/shared/links" %>
</div>