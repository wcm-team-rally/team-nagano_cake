<h1><%= @customer.full_name %>さんの会員情報編集</h1>

<%= form_with model: @customer, url:admin_customer_path, local:true do |f| %>

  <div class="form-group">
    <%= f.label :会員ID %>
    <%= f.file_field :id %>
  </div>

  <div class="form-group">
    <%= f.label :氏名 %>
    <%= f.text_field :full_name %>
  </div>
  <div class="form-group">
    <%= f.label :フリガナ %>
    <%= f.text_field :full_name_kana %>
  </div>

  <div class="form-group">
    <%= f.label :郵便番号 %>
    <%= f.text_field :postal_code %>
  </div>

  <div class="form-group">
    <%= f.label :住所 %>
    <%= f.text_field :address %>
  </div>

  <div class="form-group">
    <%= f.label :電話番号 %>
    <%= f.text_field :telephone_number %>
  </div>

  <div class="form-group">
    <%= f.label :メールアドレス %>
    <%= f.text_field :email %>
  </div>

  </div>
    <div class="form-group">
    <%= f.label :販売ステータス %> <!--ラジオボックスで作成-->
　　<%= f.radio_button :is_active, "true" %>有効
　　<%= f.radio_button :is_active, "false" %>退会
  </div>

  <div class="form-group">
    <%= f.submit "変更を保存", class: 'btn btn-success' %>
  </div>
<% end %>