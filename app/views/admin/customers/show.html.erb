<div class="container">
  <div class="row">
    <div><%= @customer.full_name %>さんの会員詳細</div>
    <div class="col">
      <table>
        <tr>
          <th>会員ID</th>
          <td><%= @customer.id %></td>
        </tr>
        <tr>
          <th>氏名</th><td><%= @customer.full_name %></td>
        </tr>
        <tr>
          <th>フリガナ</th><td><%= @customer.full_name_kana %></td>
        </tr>
        <tr>
          <th>郵便番号</th><td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <th>住所</th><td><%= @customer.address %></td>
        </tr>
        <tr>
          <th>電話番号</th><td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th><td><%= @customer.email %></td>
        </tr>
        <tr>
          <th>
            会員ステータス
          </th>
          <td>
            <% if @customer.is_active == true %>
              <p class="text-success">有効</p>
            <% else %>
              <p class="text-muted">退会</p>
            <% end %>
          </td>
        </tr>
        <tr>
          <td><%= link_to "編集する", edit_admin_customer_path(@customer), class: "btn btn-sm btn-success" %></td>
        </tr>
        <tr>
          <td><%= link_to "注文履歴一覧を見る", order_path %></td>
        </tr>
      </tbale>
    </div>
  </div>
</div>
