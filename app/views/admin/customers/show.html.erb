<div class="container">
  <label class="h4 bg-light px-4">
    <%= @customer.full_name %>さんの会員詳細
  </label>
  <div class="row mb-2">
    <div class="col-lg-6">
      <table class="table table-borderless">
        <tbody>
          <tr>
            <th>会員ID</th>
            <td><%= @customer.id %></td>
          </tr>
          <tr>
            <th>氏名</th>
            <td><%= @customer.full_name %></td>
          </tr>
          <tr>
            <th>フリガナ</th>
            <td><%= @customer.full_name_kana %></td>
          </tr>
          <tr>
            <th>郵便番号</th>
            <td><%= @customer.postal_code %></td>
          </tr>
          <tr>
            <th>住所</th>
            <td><%= @customer.address %></td>
          </tr>
          <tr>
            <th>電話番号</th>
            <td><%= @customer.telephone_number %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= @customer.email %></td>
          </tr>
          <tr>
            <th>
              会員ステータス
            </th>
            <td>
              <% if @customer.is_active == true %>
                <p class="text-success">有効</p>
              <% else %>
                <p class="text-muted">退会</p>
              <% end %>
            </td>
          </tr>
          <tr>
            <td><%= link_to "編集する", edit_admin_customer_path(@customer), class: "btn btn-sm btn-success" %></td>
            <td><%= link_to "注文履歴一覧を見る", order_path, class:"btn btn-primary" %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>