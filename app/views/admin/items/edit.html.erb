<h1>商品編集</h1>

<%= form_with model:item,local:true do |item| %>

  <div class="form-group">
    <%= item.label :商品画像 %> <!--ファイル選択で作成→記述済み-->
    <%= item.file_field :image, accept: "image/*", class: 'form-control book_title' %>
  </div>

  <div class="form-group">
    <%= item.label :商品名 %>
    <%= item.text_area :name, class: 'form-control book_body' %>
  </div>
  <div class="form-group">
    <%= item.label :商品説明 %>
    <%= item.text_field :introduction, class: 'form-control book_title' %>
  </div>

  <div class="form-group">
    <%= item.label :ジャンル %> <!--プルダウンで作成→記述済み-->
    <%= item.collection_select :genre_id, [["ケーキ", "1"], ["プリン", "2"], ["焼き菓子", "3"], ["キャンディ", "4"]] include_blank: "選択してください" %>
  </div>

  <div class="form-group">
    <%= item.label :税抜価格 %>
    <%= item.text_field :price, class: 'form-control book_title' %>
  </div>

  </div>
    <div class="form-group">
    <%= item.label :販売ステータス %> <!--ラジオボックスで作成-->
    <%= item.text_field :price, class: 'form-control book_title' %>

  </div>


  <div class="form-group">
    <%= item.submit "変更を保存", class: 'btn btn-success' %>
  </div>
<% end %>
