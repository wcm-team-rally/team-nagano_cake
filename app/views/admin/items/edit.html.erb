<h1>商品編集</h1>

<%= form_with model:item,local:true do |item| %>

  <div class="form-group">
    <%= item.label :title %>
    <%= item.text_field :title, class: 'form-control book_title' %>
  </div>
  
  <div class="form-group">
    <%= item.label :商品名 %>
    <%= item.text_area :body, class: 'form-control book_body' %>
  </div>
  <div class="form-group">
    <%= item.label :商品説明 %>
    <%= item.text_field :title, class: 'form-control book_title' %>
  </div>
  <div class="form-group">
    <%= item.label :ジャンル %>
    <%= item.text_area :body, class: 'form-control book_body' %>
  </div>
    <div class="form-group">
    <%= item.label :税抜 %>
    <%= item.text_field :title, class: 'form-control book_title' %>
  </div>
  
  <div class="form-group">
    <%= item.submit class: 'btn btn-success' %>
  </div>
<% end %>
