<h1>商品詳細</h1>


<table>
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
      <th rowspan="5"></th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= image_tag item.get_profile_image, size: '100x100' %></td>
        <td><%= item.id %></td>
        <td><%= link_to "item.name", admin_item_path(item.id) %></td>
        <td><%= item.price %></td>
        <td><%= item.genre_id %></td>
        <td><%= item.is_active %></td>
      </tr>
    <% end %>
    <%= link_to "編集する", edit_admin_item_path(@items.id), class: "btn btn-sm btn-success" %>
  </tbody>
  
</table>