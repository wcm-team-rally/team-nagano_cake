<div class="container">
  <div class="row mb-2">
    <div class="col-lg-10">
      <label class="h4 bg-light">会員情報編集</lable>
      <%= form_with model: @customer, url: customers_information_path, method: :patch do |f| %>
      <table class="table table-borderless">
        <tr>
          <td>氏名</td>
          <td><%= f.text_field :last_name %></td>
          <td><%= f.text_field :first_name %></td>
        </tr>

        <tr>
          <td>フリガナ</td>
          <td><%= f.text_field :last_name_kana %></td>
          <td><%= f.text_field :first_name_kana %></td>
        </tr>

        <tr>
          <td>郵便番号</td>
          <td><%= f.text_field :postal_code %></td>
          <td></td>
        </tr>

        <tr>
          <td>住所</td>
          <td><%= f.text_field :address %></td>
          <td></td>
        </tr>

        <tr>
          <td>電話番号</td>
          <td><%= f.text_field :telephone_number %></td>
          <td></td>
        </tr>

        <tr>
          <td>メールアドレス</td>
          <td><%= f.text_field :email %></td>
          <td></td>
        </tr>

        <tr>
          <td></td>
          <td><%= f.submit "編集内容を保存", class:"btn btn-success" %></td>
          <td><%= link_to "退会する", customers_check_path, class:"btn btn-danger" %></td>
        </tr>
      </table>
      <% end %>
    </div>
  </div>
</div>