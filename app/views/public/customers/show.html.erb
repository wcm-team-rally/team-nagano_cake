<div class="container">
  <div class="row mb-2">
    <div class="col-lg-10">
      <label class="h4 bg-light">マイページ</label>
      <div>
        <strong>登録情報　</strong>
        <%= link_to "編集する", customers_information_edit_path, class: "btn btn-success" %>
      </div>

      <table class="table table-bordered">
      <tr>
        <td class="bg-light">氏名</td>
        <td><%= @customer.full_name %></td>
      </tr>
      <tr>
        <td class="bg-light">カナ</td>
        <td><%= @customer.full_name_kana %></td>
      </tr>
      <tr>
        <td class="bg-light">郵便番号</td>
        <td><%= @customer.postal_code %></td>
      </tr>
      <tr>
        <td class="bg-light">住所</td>
        <td><%= @customer.address %></td>
      </tr>
      <tr>
        <td class="bg-light">電話番号</td>
        <td><%= @customer.telephone_number %></td>
      </tr>
      <tr>
        <td class="bg-light">メールアドレス</td>
        <td><%= @customer.email %></td>
      </tr>
      </table>

      <div>
        <strong>配送先</strong>
        <%= link_to "一覧を見る", addresses_path, class: "btn btn-primary" %>
      </div>
      <div>
        <strong>注文履歴</strong>
        <%= link_to "一覧を見る", orders_path, class: "btn btn-primary" %>
      </div>

    </div>
  </div>
</div>