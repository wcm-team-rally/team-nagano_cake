<div class="container">
<label class="h4 bg-light">配送先編集</label>
<div class="row mb-2">
<div class="col-lg-10">

<%= form_with model: @address do |f| %>
<table class="table table-borderless">
  <tbody>
  <tr>
    <td>郵便番号（ハイフンなし）</td>
    <td><%= f.text_field :postal_code %></td>
  </tr>
  <tr>
    <td>住所</td>
    <td><%= f.text_field :address %></td>
  </tr>
  <tr>
    <td>宛名</td>
    <td><%= f.text_field :name %></td>
    <td><%= f.submit '変更内容を保存', class: "btn btn-primary" %></td>
  </tr>
  </tbody>
</table>
<% end %>

</div>
</div>
</div>