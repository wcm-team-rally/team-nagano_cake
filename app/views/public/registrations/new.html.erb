<div class="container">
  <label class="h4 bg-light mx-5 my-4 px-4">新規会員登録</label>
    <div class="row mb-2">
      <div class="col-lg-10">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "public/shared/error_messages", resource: resource %>
          <table class="table table-borderless" >
            <tbody>
              <tr>
                <td>名前</td>
                <td>
                  <%= f.text_field :last_name, placeholder:"(姓) 令和", class:"rounded mr-3" %>
                  <%= f.text_field :first_name, placeholder:"(名) 太郎", class:"rounded" %>
                </td>
              </tr>
              <tr>
                <td><%= f.label :フリガナ %></td>
                <td>
                  <%= f.text_field :last_name_kana, placeholder:"(セイ) レイワ", class:"rounded mr-3" %>
                  <%= f.text_field :first_name_kana, placeholder:"(メイ) タロウ", class:"rounded" %>
                </td>
              </tr>
              <tr>
                <td>メールアドレス</td>
                <td><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"sample@example.com", class:"rounded" %></td>
              </tr>
              <tr>
                <td>郵便番号(ハイフンなし)</td>
                <td><%= f.text_field :postal_code, placeholder:"1234567", class:"rounded" %></td>
              </tr>
              <tr>
                <td>住所</td>
                <td><%= f.text_field :address, placeholder:"東京都新宿区西新宿1-1", class:"rounded" %></td>
              </tr>
              <tr>
                <td>電話番号(ハイフンなし)</td>
                <td><%= f.text_field :telephone_number, placeholder:"00099998888", class:"rounded" %></td>
              </tr>
              <tr>
                <td>パスワード(6文字以上)</td>
                <td><%= f.password_field :password, autocomplete: "new-password", class:"rounded" %></td>
              </tr>
              <tr>
                <td>パスワード(確認用)</td>
                <td><%= f.password_field :password_confirmation, autocomplete: "new-password", class:"rounded" %></td>
              </tr>
              <tr>
                <td></td>
                <td><%= f.submit "新規登録", class: "btn btn-success px-5" %></td>
              </tr>
            </tbody>
          </table>
          <% end %>
        </div>
      </div>
      <label class="h4 bg-light px-4">既に登録済みの方</label>
      <div class="row mb-5">
        <div class="col-lg-1"></div>
        <div class="col-lg-11">
          <%= link_to "こちら", customer_session_path %>　からログインしてください。
        </div>
      </div>
    </div>