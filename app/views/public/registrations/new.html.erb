<div class="container">
<label class="h4 bg-light">新規会員登録</label>
<div class="row mb-2">
<div class="col-lg-10">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="field">
  <%= f.label :"名前" %>
  (性)<%= f.text_field :last_name %>
  (名)<%= f.text_field :first_name %>
  </div>

  <div class="field">
  <%= f.label :"フリガナ" %>
  (セイ)<%= f.text_field :last_name_kana %>
  (メイ)<%= f.text_field :first_name_kana %>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
  <%= f.label :"郵便番号(ハイフンなし)" %>
  <%= f.text_field :postal_code %>
  </div>

  <div class="field">
  <%= f.label :"住所" %>
  <%= f.text_field :address %>
  </div>

  <div class="field">
  <%= f.label :"電話番号(ハイフンなし)" %>
  <%= f.text_field :telephone_number %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %>文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録", class: "btn btn-primary" %>
  </div>
<% end %>

<div>既に登録済みの方</div>
<%= render "public/shared/links" %>

</div>
</div>
</div>